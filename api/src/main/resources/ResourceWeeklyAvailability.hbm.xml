<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.appointmentscheduling">

    <class name="ResourceWeeklyAvailability" table="${project.parent.artifactId}_resource_weekly_availability">
        <id name="resourceWeeklyAvailabilityId" type="int" column="resource_weekly_availability_id" unsaved-value="0">
            <generator class="native">
                <param name="sequence">resource_weekly_availability_id_seq</param>
            </generator>
        </id>

        <discriminator column="resource_weekly_availability_id" insert="false"/>
<!--        <many-to-one name="appointmentResource" class="AppointmentResource" insert="false" update="false">
            <column name="appointment_resource_id"/>
        </many-to-one>-->
        <many-to-one name="appointmentResource" column="appointment_resource_id" class="AppointmentResource" not-null="true"/>
        <property name="monday" type="java.lang.String" column="monday" not-null="false" length="19"/>
        <property name="tuesday" type="java.lang.String" column="tuesday" not-null="false" length="19"/>
        <property name="wednesday" type="java.lang.String" column="wednesday" not-null="false" length="19"/>
        <property name="thursday" type="java.lang.String" column="thursday" not-null="false" length="19"/>
        <property name="friday" type="java.lang.String" column="friday" not-null="false" length="19"/>
        <property name="saturday" type="java.lang.String" column="saturday" not-null="false" length="19"/>
        <property name="sunday" type="java.lang.String" column="sunday" not-null="false" length="19"/>

        <!-- bi-directional many-to-one association to User -->
        <many-to-one name="creator" class="org.openmrs.User" not-null="true">
            <column name="creator"/>
        </many-to-one>
        <property name="dateCreated" type="java.util.Date"
                  column="date_created" not-null="true" length="19"/>
        <property name="voided" type="java.lang.Boolean"
                  column="voided" length="1" not-null="true"/>
        <!-- bi-directional many-to-one association to User -->
        <many-to-one name="voidedBy" class="org.openmrs.User">
            <column name="voided_by"/>
        </many-to-one>
        <property name="voidReason" type="java.lang.String"
                  column="void_reason" length="255"/>
        <property name="dateVoided" type="java.util.Date"
                  column="date_voided" length="19"/>
        <!-- bi-directional many-to-one association to User -->
        <many-to-one name="changedBy" class="org.openmrs.User">
            <column name="changed_by"/>
        </many-to-one>
        <property name="dateChanged" type="java.util.Date"
                  column="date_changed" length="19"/>
        <property name="uuid" type="java.lang.String"
                  column="uuid" length="38" unique="true" not-null="true"/>
    </class>

</hibernate-mapping>